<h1>Listing articles</h1>

<%= link_to 'Create new post', new_article_path %>
<div class="media">
	<div class="media-body">
		<table class="table table-hover">
			<tr>
				<th>Title</th>
				<th>Text</th>
			</tr>
	
			<% @articles.each do |article| %>
			<tr>
				<td><%= article.title %></td>
				<td><%= article.text %></td>
				<td><%= link_to 'Show', article_path(article), class: 'btn btn-mini btn-success' %></td>
				<td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-mini'%></td>
				<td><%= link_to 'Destroy', article_path(article), method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?'} %></td>
		
			</tr>
			<% end %>
		</table>
	</div>
</div>

<%= link_to 'Back', root_path %>