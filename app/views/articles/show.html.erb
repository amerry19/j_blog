<h1 class="styled-title">
	<!--<strong>Title:</strong>-->
	<%= @article.title %>
</h1>

<p>
	<!-- <strong>Text:</strong> -->
	<%= @article.text %>
</p>

<h3>Comments</h3>
<%= render @article.comments %>

